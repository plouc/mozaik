.list {
  list-style: none
  margin:  0
  padding: 0
}
.list__empty-msg {
  text-align: center
  margin: 30px 15px
}
.list__item {
  position relative
  themify: padding list_item_padding
}
.list__item--with-status {
  themify: padding list_item_with_status_padding
}
.list__item--with-status:before {
  content: ' '
  display: block
  position: absolute
  background-color: #000
  themifyAll({
    width:         list_item_status_icon_size,
    height:        list_item_status_icon_size,
    border-radius: @(c) { return c.list_item_status_icon_left / 2 },
    top:           list_item_status_icon_top,
    left:          list_item_status_icon_left,
  })
}
.list__item--with-status--aborted:before,
.list__item--with-status--pending:before {
  themify: background-color unknown-color
}
.list__item--with-status--ok:before,
.list__item--with-status--passed:before,
.list__item--with-status--success:before {
  themify: background-color success-color
}
.list__item--with-status--warning:before,
.list__item--with-status--running:before {
  themify: background-color warning-color
}
.list__item--with-status--running:before {
  animation-name:            pulse-opacity
  animation-duration:        1000ms
  animation-iteration-count: infinite
}
.list__item--with-status--critical:before,
.list__item--with-status--failed:before,
.list__item--with-status--failure:before {
  themify: background-color failure-color
}
.list--compact .list__item {
  padding: 5px 15px
}
.list__item__time {
  font-size: 85%
}
.list__item__time--inline {
  display inline-block
  margin-left 7px
}
